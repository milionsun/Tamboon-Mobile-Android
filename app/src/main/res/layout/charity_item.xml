<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/list_item_horizontal_margin"
    android:layout_marginEnd="@dimen/list_item_horizontal_margin"
    android:layout_marginTop="@dimen/list_item_top_margin">

    <TextView
        android:id="@+id/charityNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/list_item_textview_horizontal_margin"
        android:layout_marginEnd="@dimen/list_item_textview_horizontal_margin"
        android:layout_marginTop="@dimen/list_item_textview_vertical_margin"
        android:layout_marginBottom="@dimen/list_item_textview_vertical_margin"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

</android.support.v7.widget.CardView>